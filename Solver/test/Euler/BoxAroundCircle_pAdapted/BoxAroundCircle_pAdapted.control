/* Test case of p-Adaptation for the Euler equations */
Flow equations        = "Euler"
mesh file name        = "../../TestMeshes/BoxAroundCircle3D_extended_pol3.mesh"
solution file name    = "RESULTS/BoxAroundCircle_pAdapted_temp.hsol"
restart file name     = "plop"
restart               = .FALSE.
Polynomial order      = 4
Number of time steps  = 26
Output Interval       = 1
Convergence tolerance = 1.d-5
cfl                   = 0.4
mach number           = 0.3
Riemann solver        = Standard Roe
Reynolds number       = 0.0
AOA theta             = 0.0
AOA phi               = 0.0
write dt restriction  = .TRUE.

Number of boundaries  = 7
InnerCylinder 0.0 FreeSlipWall
Front 0.0 Inflow
bottom 0.0 FreeSlipWall
top 0.0 FreeSlipWall
Back 0.0 OutflowSpecifyP
Left 0.0 OutflowSpecifyP
Right 0.0 OutflowSpecifyP

!-Adaptation-----------------------------------
pAdaptation          = .TRUE.
Truncation error     = 1.d-2
Truncation error type = "isolated"
adaptation nmax i    = 10
adaptation nmax j    = 10
adaptation nmax k    = 10
adaptation nmin      = 2
adaptation conforming boundaries = 1
InnerCylinder
padapted mg sweeps pre      = 10
padapted mg sweeps post     = 12
padapted mg sweeps coarsest = 20
!---------------------------------------------

!-Multigrid------------------------------------
FASFMG residual      = 1.0
time integration     = FAS
mg smoother          = RK3
multigrid levels     = 15
delta n              = 1
mg sweeps            = 20
mg sweeps coarsest   = 40
max mg sweeps        = 500
postsmooth option    = "smooth"
smooth fine          = 1.2
multigrid output     = .TRUE.
!---------------------------------------------

#define probe 1
   Name = wake_w
   Position = [0.0,2.0,4.0]
   Variable = w
#end 

#define surface monitor 1
   Name = drag
   Marker = innercylinder
   Variable = pressure-force
   Direction = [1.0, 0.0, 0.0]
#end

#define surface monitor 2
   Name = p_average
   Marker = innercylinder
   Variable = pressure-average
#end
