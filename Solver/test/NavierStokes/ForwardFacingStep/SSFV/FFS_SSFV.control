!
!       *******************
!       Sample control file
!       *******************
!
!-------------------------- Configuration:-
                          Mesh file name = ../../../TestMeshes/ForwardFacingStep.mesh
                      Solution file name = RESULTS/FFS.hsol
              Save gradients to solution = .false.
                2D mesh offset direction = z
                                 Restart = .false.
                       Restart file name = ../FFS.rst

!-------------------- Physical parameters:-
!                        ** Navier-Stokes
                          Flow equations = NS
                             Mach number = 3.0
                         Reynolds number = 0.0
                          Prandtl number = 0.72
                               AoA Theta = 0.0
                                 AoA Phi = 0.0
                       Compute gradients = .true.

!------------------------- Discretization:-
                        Polynomial order = 7
                    Discretization nodes = Gauss-Lobatto
!                         Riemann solver = Matrix dissipation
                          Riemann solver = ES Lax-Friedrichs
                    Lambda stabilization = 1e-5
                 Inviscid discretization = Split-form
                              Split form = Chandrasekar
                      Gradient variables = Entropy
                  Viscous discretization = BR1

!----------------------- Shock-capturing:-
                 Enable shock-capturing = .true.
                           Shock sensor = truncation error
                     Shock first method = SSFV
                    Shock second method = SSFV
                        SSFV blending 1 = 1d-1
                        SSFV blending 2 = 1d-1
                     Sensor lower limit = -10000.0
                    Sensor higher limit = -2.0
                   Sensor TE derivative = isolated
                      Sensor TE delta N = 6

!----------------------- Time integration:-
                        Time integration = Explicit
                                      dt = 0.00002
                    Number of time steps = 50000 ! 50
                         Output interval = 100 ! 10
                   Convergence tolerance = 1.0e-10
      Compute derivative after time step = .true.

!-------------------- Boundary conditions:-
#define boundary inlet
   type = Inflow
#end

#define boundary step
   type = FreeSlipWall
#end

#define boundary periodic+
   type = periodic
   coupled boundary = periodic-
#end

#define boundary periodic-
   type = periodic
   coupled boundary = periodic+
#end

#define boundary outlet
   type = Outflow
#end

#define boundary top
   type = FreeSlipWall
#end

